{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", {
            "devDependencies": false,
            "optionalDependencies": false,
            "peerDependencies": false,
            "packageDir": "./"
        }],
        "import/prefer-default-export": "off",
        "max-len": "off"
    }
}
